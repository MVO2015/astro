<body>
<div id="background-zodiac">
    <img id="zodiac-paintings" src="./img/background-zodiac.png" alt="" style="opacity: 0">
</div>
<div id="container" class="container" align="center">
    <!--INCLUDE clock.img -->
</div>
<div id="text">
    <h1>Astronomical Clock</h1>
    <p class="author">Martin Vondráček © 2017 - 2019</p>
</div>
<div id="date">
    <p id="time"></p>
    <p id="dst-container">
        <span id="dstSwitch" class="clickable">
            <span id="dstOn" style="display: none" onclick="daylightSavingTimeOff()">- Show sun time (click me!) -</span>
            <span id="dstOff" style="display: none" onclick="daylightSavingTimeOn()">- Show daylight saving time (click me!)   -</span>
        </span>
    </p>
</div>
<div class="slidecontainer">
    <input type="range" min="-182" max="182" value="0" class="slider" id="zodiacumSlider">
</div>

